<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:SlotMachine.Views.Controls">
    <Style TargetType="{x:Type controls:SlideButton}">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type controls:SlideButton}">
                        <Grid>
                            <Rectangle x:Name="Track" Fill="Red" />

                            <Ellipse
                                x:Name="Thumb"
                                Height="{Binding ElementName=Thumb, Path=ActualWidth}"
                                Fill="Blue" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>