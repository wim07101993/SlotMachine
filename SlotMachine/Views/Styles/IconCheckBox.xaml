<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:SlotMachine.Views.Controls">
    <Style TargetType="{x:Type controls:IconCheckBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:IconCheckBox}">
                    <Grid
                        Background="{TemplateBinding Foreground}"
                        Effect="{StaticResource Shadow4}"
                        OpacityMask="{TemplateBinding Icon}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>