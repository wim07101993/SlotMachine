<Window
    x:Class="SlotMachineTutorial.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:SlotMachineTutorial.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModelInterfaces="clr-namespace:SlotMachineTutorial.ViewModelInterfaces"
    Title="Slotmachine"
    MinWidth="1000"
    MinHeight="600"
    d:DataContext="{d:DesignInstance viewModelInterfaces:IMainWindowViewModel}"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="200" />
                </Grid.RowDefinitions>

                <ItemsControl
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    ItemsSource="{Binding Numbers}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid
                                Width="100"
                                Height="100"
                                Margin="15"
                                Background="{DynamicResource PrimaryDarkBrush}">
                                <Grid.Effect>
                                    <DropShadowEffect
                                        BlurRadius="14"
                                        Direction="270"
                                        Opacity="0.42"
                                        ShadowDepth="4.5"
                                        Color="{DynamicResource ShadowColor}" />
                                </Grid.Effect>
                                <Grid.OpacityMask>
                                    <VisualBrush Visual="{Binding Value, Converter={StaticResource IntToVisualConverter}}" />
                                </Grid.OpacityMask>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock
                    x:Name="YouWonTextBlock"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="100"
                    FontWeight="Bold"
                    Foreground="{DynamicResource AccentDarkBrush}"
                    Text="YOU WON"
                    Visibility="{Binding YouWon, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock.Effect>
                        <DropShadowEffect
                            BlurRadius="14"
                            Direction="270"
                            Opacity="0.42"
                            ShadowDepth="4.5"
                            Color="{DynamicResource ShadowColor}" />
                    </TextBlock.Effect>
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=YouWonTextBlock, Path=Visibility}" Value="Visible">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard Name="Flash">
                                            <BeginStoryboard.Storyboard>
                                                <Storyboard TargetProperty="Opacity">
                                                    <DoubleAnimation
                                                        AutoReverse="True"
                                                        RepeatBehavior="Forever"
                                                        From="1"
                                                        To="0"
                                                        Duration="0:0:0.5" />
                                                </Storyboard>
                                            </BeginStoryboard.Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>

                                    <DataTrigger.ExitActions>
                                        <StopStoryboard BeginStoryboardName="Flash" />
                                    </DataTrigger.ExitActions>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <Button
                Grid.Column="1"
                Width="75"
                Margin="0,50,50,50"
                Background="{DynamicResource PrimaryDarkBrush}"
                Command="{Binding RollCommand}"
                Content="Roll"
                Style="{StaticResource SlideButtonStyle}" />
        </Grid>

        <ToggleButton
            x:Name="Opener"
            Width="40" Style="{StaticResource IconToggleButtonStyle}"
            Height="40"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            controls:IconAssist.Icon="{StaticResource MenuIcon}"
            Foreground="{DynamicResource PrimaryDarkBrush}" />

        <controls:Drawer
            DrawerDepth="335"
            IsOpen="{Binding ElementName=Opener, Path=IsChecked, Mode=TwoWay}"
            Style="{StaticResource LeftDrawerStyle}">
            <TextBlock Text="Drawer" />
        </controls:Drawer>
    </Grid>
</Window>
