<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:SlotMachine.Views.Controls">
    <Style TargetType="{x:Type controls:IconToggleButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:IconToggleButton}">
                    <Border Padding="5" Background="Transparent">
                        <Grid Background="{TemplateBinding Foreground}" OpacityMask="{TemplateBinding Icon}">
                            <Grid.Effect>
                                <DropShadowEffect
                                    BlurRadius="4"
                                    Direction="270"
                                    Opacity="0.42"
                                    ShadowDepth="0.5"
                                    Color="{DynamicResource ShadowColor}" />
                            </Grid.Effect>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>